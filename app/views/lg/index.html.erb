<h4>Login With PayPal JS Gadget <a target="_blank" href="https://developer.paypal.com/docs/integration/direct/identity/log-in-with-paypal/">details</a></h4>
<span id="myContainer"></span>
<script src="https://www.paypalobjects.com/js/external/api.js"></script>
<script>
paypal.use( ["login"], function(login) {
  login.render ({
    "appid": "<%= @client_id %>",
    "authend": "sandbox",
    "scopes": "profile email address phone https://uri.paypal.com/services/paypalattributes https://uri.paypal.com/services/expresscheckout https://uri.paypal.com/services/invoicing",
    "containerid": "myContainer",
    "locale": "ja-jp",
    "returnurl": "<%= @redirect_uri %>"
  });
});
</script>

