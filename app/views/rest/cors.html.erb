<table class="table table-striped">
  <tbody>
	  <tr>
	  <td>
	  Card Information
	  </td>
	  <td>
    <label>Type</label>
  	<input type="text" id="brand" class="form-control" value="visa"/>
    <label>Number</label>
	  <input type="text" id="number" class="form-control" value="4417119669820331"/>
    <label>Month</label>
	  <input type="text" id="month" class="form-control" value="11"/>
    <label>Year</label>
	  <input type="text" id="year" class="form-control" value="2018"/>
    </td>
